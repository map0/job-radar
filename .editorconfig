# @see editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.json]
indent_size = 2

[*.js]
indent_size = 2

[*.tag]
indent_size = 2

[*.yml]
indent_size = 2

[*.scss]
indent_size = 2

# [*.html]
# indent_size = 1

# Trailing whitespace is significant in markdown files.
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

[Makefile]
indent_style = tab
indent_size = 4
