mixin jobPostCard(jobPost={})
  .jobPost
    .jobPost__hero
      .jobPost__actions
        .jobPost__action.jobPost__action--edit
          a(href=`/jobPost/${jobPost._id}/edit`)
            != h.iconSvg('pencil')
      img(src=`/uploads/${jobPost.photo || 'imageDefaultJobPost.jpeg'}`)
      h2.title
        a(href=``) #{jobPost.title}
    .jobPost__details
      p= jobPost.description.split(' ').slice(0, 25).join(' ')
